{
    "manifest_version": 3,
    "name": "YouTube Bookmarker",
    "version": "1.0",
    "description": "YouTube Bookmarker",
    "action": {
        "default_title": "YouTube Bookmarker",
        "default_popup":"js/popup.html"
    },
    "icons": {
        "16": "assets/icons/bookMark_16.png",
        "34": "assets/icons/bookMark_34.png",
        "48": "assets/icons/bookMark_48.png",
        "128": "assets/icons/bookMark_128.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": [
        "tabs",
        "scripting",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/*"
            ],
            "js": [
                "js/content_scripts.js"
            ],
            "css": ["main.css"]
        }
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ]
}